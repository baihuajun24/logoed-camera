.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #aaa;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.countdown {
  font-size: 20px;
  color: white;
  position: absolute;
  bottom: 20px;
}
.camera-button {
  margin: 20rpx;
  background-color: #1AAD19;
  color: #ffffff;
  border: none;
  border-radius: 4rpx;
  padding: 10rpx 20rpx;
}
